%h4
  = t("admin.actions.reset_password.are_you_sure", object_label: @model_config.with(object: @object).object_label)

= form_for(@object, url: reset_password_path, html: {method: "put"}) do

  %input{type: :hidden, name: 'return_to', value: (params[:return_to].presence || request.referer)}
  %input{type: :hidden, name: @abstract_model.param_key + '[password]', value: SecureRandom.base64(6)}
  %input{type: :hidden, name: @abstract_model.param_key + '[name]', value: 'Bob'}
  .form-actions
    %button.btn.btn-danger{type: "submit", :'data-disable-with' => t("admin.form.confirmation")}
      %i.icon-white.icon-ok
      = t("admin.form.confirmation")
    %button.btn{type: "submit", name: "_continue", :'data-disable-with' => t("admin.form.cancel")}
      %i.icon-remove
      = t("admin.form.cancel")
